<?xml version="1.0" encoding="UTF-8"?>
<targets>
	<target name="baidu-web-list">
		<rules>
			<rule type="regex" value="(?=http://www\.baidu\.com/s\?wd\=).[^&amp;]*" />
		</rules>
		<model>
			<fields>
				<field name="list_url" isArray="1"> 
					<parsers>
						<parser xpath="//div[@id='page']//a[@href]" attribute="href" />
						<parser exp="$host + $this" />
					</parsers>
				</field>
			</fields>
		</model>
	</target>
	<target name="baidu-web-detail">
		<rules>
			<rule type="start" value="http://www.baidu.com/s?wd=" />
		</rules>
		<model>
			<fields>
				<field name="detail_url" isArray="1"> 
					<parsers>
						<parser xpath="//div[@id='content_left']//div[@class='result c-container ']//h3//a[@href]" attribute="href" />
					</parsers>
				</field>
			</fields>
		</model>
	</target>
</targets>
